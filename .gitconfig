[user]
  email = shyamasaki@gmail.com
  name = Shohei Yamasaki
[color]
  ui = true
[alias]
  s  = status
  co = checkout
  fork = checkout -b
  cp = cherry-pick
  a  = add
  c  = commit
  cm = commit -m
  ca = commit -am

  # branch関連
  b = branch
  ba = branch -a           # 全てのbranchを表示
  bd = branch -d
  bD = branch -D

  p  = push
  po = push origin
  pf = push -f

  # 履歴関連
  ll = log --pretty=\"format:%ad %h (%an): %s\" --date=short
  ls = log --name-status
[core]
  autocrlf = input
  quotepath = false
  editor = /usr/bin/vim
#pager = lv -c
[push]
  default = simple
